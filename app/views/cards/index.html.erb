<h2><%=t('all_c')%></h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('translated') %></th>
      <th><%= t('view_date') %></th>
    </tr>
  </thead>
  <tbody>
    <% @cards.each do |card| %>
    <tr>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
      <td>
        <div class="btn-group">
          <%= link_to t('edit_short'), edit_user_card_path(current_user,card), class: 'btn btn-default' %> 
          <%= link_to t('delete'), user_card_path(current_user,card), class: 'btn btn-default',
                method: :delete,
                data: {confirm: t("sure?")} %>

          </div>
        </td>
    </tr>
  <% end %>
  </tbody>
</table>
