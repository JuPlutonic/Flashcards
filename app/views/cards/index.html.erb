<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-8">
    <h2><%=t('all_c') + t("of_deck") + @deck.name%></h2>
    <table class="table table-hover">
      <thead>
        <tr>
          <th><%= t('translated') %></th>
          <th><%= t('view_date') %></th>
          <th><%= t("example_image") %></th>
        </tr>
      <tbody>
        <% @cards.each do |card| %>
        <tr>
          <td><%= card.translated_text %></td>
          <td><%= card.review_date.strftime("%d/%m/%Y") %></td>
          <td><%= image_tag(card.exemplum.thumb.url) if card.exemplum? %> </td>
          <td>
            <div class="btn-group">
             <%= link_to t('edit_short'), edit_deck_card_path(@deck, card), class: 'btn btn-default btn-xs' %> 
             <%= link_to t('delete'), deck_card_path(@deck, card), class: 'btn btn-default btn-xs',
                method: :delete,
                data: {confirm: t("sure?")} %>

            </div>
          </td>
        </tr>
  
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-xs-6 col-md-4">
    <div class="btn-group-vertical" role="group" aria-label="...">
      <%= link_to t("all_decks"), decks_path, class: "btn btn-default" %>
      <%= link_to t("add_deck"), new_deck_path, class: "btn btn-default" %>
      <%= link_to t("add_c"), new_deck_card_path(@deck), class: 'btn btn-default' %>
    </div>
  </div>
</div>


