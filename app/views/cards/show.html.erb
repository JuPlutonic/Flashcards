<h2>Все карточки</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Original</th>
      <th>Translated</th>
      <th>Last view date</th>
    </tr>
  </thead>
 <tbody>
	  <% @cards.each do |card| %>
	      <tr>
	        <td><%= card.original_text %></td>
	        <td><%= card.translated_text %></td>
	        <td><%= card.review_date.strftime("%m/%d/%Y") %></td>
	       </tr>
	   <% end %>
	</tbody>
</table>
