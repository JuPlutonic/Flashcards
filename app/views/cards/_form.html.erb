<%= simple_form_for [@card] do |f| %>
  <%= f.input :original_text, label: t("original") %>
  <%= f.input :translated_text, label: t("translated") %>
  <%= f.input :exemplum, as: :image_preview, input_html: {preview_version: :thumb}, label: t("example_image") %>
  <%= f.button :submit, t("submit") %>
 <% end %>