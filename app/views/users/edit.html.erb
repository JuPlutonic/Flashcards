 <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-8">
      <h2><%= t('edit_user_head') %> </h2>
       <%= simple_form_for @user do |f| %>
         <%= f.input :email, label: t('email_here') %>
         <%= f.input :password, label: t('password_here') %>
         <%= f.input :password_confirmation, label: t('password_confirmation_here') %>
         <%= f.button :submit, t('submit') %>
       <% end %>
    </div>
  <div class="col-xs-6 col-md-4">
    <div class="btn-group-vertical" role="group" aria-label="...">
      <%= link_to t("all_c"), cards_path, class: "btn btn-default" %>
      <%= link_to t("add_c"), new_card_path, class: "btn btn-default" %>
    </div>
  </div>
</div>